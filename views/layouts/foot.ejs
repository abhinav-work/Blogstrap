                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="menus d-flex">
                    <ul class="list-unstyled">
                        <li> <a href="<%= isAuthenticated ? '/edit-user' : '/login' %>">My Account</a></li>
                        <li> <a href="<%= isAuthenticated ? '/add-blog' : '/login' %>">Add Blog</a></li>
                    </ul>
                    <ul class="list-unstyled">
                        <li> <a href="#">Our Partners</a></li>
                        <li> <a href="#">Contact</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="latest-posts">
                    <% if(blogs.sort(function(a, b){return b.created_at - a.created_at}).length>2) { %>
                    <% for(blog=0 ; blog<(blogs.length) && blog < 3 ; blog++ ) { %>
                    <a href="/blogs/<%= blogs[blog]._id %>">
                        <div class="post d-flex align-items-center" id="home-Posts">
                            <div class="image"><img src="<%= blogs[blog].image_URL%>" alt="..." class="img-fluid">
                            </div>
                            <div class="title"><strong><%= blogs[blog].title %></strong><span
                                    class="date last-meta"><%= blogs[blog].updated_at.toString().substr(blogs[blog].updated_at.toString().indexOf(' ')+1).split(' ', 3).join(" ") %></span>
                            </div>
                        </div>
                    </a>
                    <br>
                    <% } %>
                    <% } %>
                    </a>
                </div>
            </div>
        </div>
    </div>
